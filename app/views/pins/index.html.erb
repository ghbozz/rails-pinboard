<div class="container-custom">
  <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix centered">
    <div class="grid">
      <% @pins.each do |pin| %>
        <div class="box col3">
          <figure class="effect-sarah">
            <%= image_tag pin.image.url(:medium) %>
            <figcaption>
              <h2><%= pin.title %></h2>
              <p><%= pin.description.chars.first(25).join('') %>...</p>
              <%= link_to 'View more', pin_path(pin)  %>
            </figcaption>
          </figure>
        </div>
      <% end %>
    </div>
  </div>
</div>
